{
  "name": "companion",
  "version": "1.0.0",
  "description": "Companion AI",
  "engines": {
    "node": "22.13.1",
    "pnpm": "10.2.1",
    "python": "3.12.2"
  },
  "scripts": {
    "start": "concurrently \"pnpm run start:frontend\" \"pnpm run start:backend\"",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "watch": "concurrently \"pnpm run watch:frontend\" \"pnpm run start:backend\"",
    "postinstall": "cd client && pnpm install --frozen-lockfile && cd ../server && pip install -r requirements.txt",
    "start:frontend": "cd client && pnpm run dev",
    "start:backend": "cd server && python3 main.py --app-mode False",
    "watch:frontend": "cd client && pnpm run watch:build",
    "build:frontend": "cd client && pnpm run build",
    "build:backend": "pyinstaller --onefile --windowed --add-data 'server/web:web' ./server/main.py --icon ./server/src/assets/fav.ico"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^9.1.2"
  }
}